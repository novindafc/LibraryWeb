@model LibraryWeb.DTOs.BookDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="js/Book.js"></script>
<h1>Create</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                @* <select asp-for="Position" class ="form-control" asp-items="ViewBag.BookId"></select> *@
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <label asp-for="Qty" class="control-label"></label>
                @* <select asp-for="Qty" class ="form-control" asp-items="ViewBag.MemberId"></select> *@
                <input asp-for="Qty" class="form-control" />
                <span asp-validation-for="Qty" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <label asp-for="Remains" class="control-label"></label>
                <input asp-for="Remains" class="form-control" />
                <span asp-validation-for="Remains" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="btnSave"  value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/Book.js" asp-append-version="true"></script>
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
